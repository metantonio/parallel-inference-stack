# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/inference

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# S3 Storage Configuration
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_MODELS=models
S3_BUCKET_RESULTS=results

# Ray Configuration
RAY_ADDRESS=ray-head:10001

# GPU Worker Configuration
MODEL_PATH=/models
BATCH_SIZE=32
MAX_BATCH_WAIT_MS=100
CUDA_VISIBLE_DEVICES=0

# API Configuration
LOG_LEVEL=info
WORKERS=4
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Authentication
JWT_SECRET_KEY=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Production Settings (uncomment for production)
# DATABASE_URL=postgresql://user:password@production-db:5432/inference
# REDIS_URL=redis://:password@production-redis:6379/0
# S3_ENDPOINT=https://s3.amazonaws.com
# LOG_LEVEL=warning
# JWT_SECRET_KEY=<generate-strong-secret>
# GRAFANA_ADMIN_PASSWORD=<strong-password>
