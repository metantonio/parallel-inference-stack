# Database Configuration
DATABASE_URL=sqlite:///./dev.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# S3 Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_MODELS=models
S3_BUCKET_RESULTS=results

# Ray Configuration
RAY_ADDRESS=localhost:10001

# GPU Worker Configuration
MODEL_PATH=/models
BATCH_SIZE=32
MAX_BATCH_WAIT_MS=100
CUDA_VISIBLE_DEVICES=0

# Inference Mode Configuration
# Set to 'local' for Ollama or 'production' for Ray Serve
INFERENCE_MODE=production

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=120

# API Configuration
LOG_LEVEL=info
WORKERS=4
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Authentication
JWT_SECRET_KEY=dev-secret-key-change-in-production-12345678
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin